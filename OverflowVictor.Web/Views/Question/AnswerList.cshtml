@using System.Diagnostics.Eventing.Reader
@model IEnumerable<OverflowVictor.Web.Models.AnswersListModel>

@{
    ViewBag.Title = "AnswerList";
}

<h2>Answer List</h2>

<p>
    @Html.ActionLink("Create New", "AnswerQuestion", "Question")
</p>
<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Votes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerName)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.QuestionId)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @using (Html.BeginForm("SelectCorrectAnswer", "Question", item))
            {
                if (item.Correct)
                {
                    <button type="button" class="btn btn-success">Correct</button>
                }
                else
                {
                    <button class="btn btn-default" type="submit">Correct</button>
                }
            }
            
        </td>
        <td>
            @Html.ActionLink("+", "VoteUpAnswer", "Question", new {answerId = item.Id}, new {@class = "link-button"}) |
            @Html.ActionLink("-", "VoteDownAnswer", "Question", new {answerId = item.Id}, new {@class = "link-button"})<br/>

            @Html.DisplayFor(modelItem => item.Votes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>
            @Html.ActionLink(item.OwnerName, "GoToProfile", "Account", new {ownerId = item.AccountId}, null)
        </td>
        <td>

            @*@Html.DisplayFor(modelItem => item.QuestionId)*@
        </td>
        <td>
            @*
            @Html.ActionLink("Edit", "Edit", new {/* id=item.PrimaryKey */}) |
            @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})
            *@
        </td>
    </tr>
}

</table>
